<resources>

    <!-- Material 1 Theme -->
    <style name="Theme.FastLyrics.Material1" parent="Theme.FastLyrics.Material1.Base">
        <item name="android:colorBackground">@color/theme_background_dark</item>
    </style>

    <!-- Material 2 Theme -->
    <style name="Theme.FastLyrics.Material2" parent="Theme.FastLyrics.Material2.Base">
        <item name="android:colorBackground">@color/theme_background_dark</item>
        <item name="android:statusBarColor">@color/theme_background_dark</item>

        <item name="navHeaderBackground">@color/theme_background_dark</item>
        <item name="navigationViewStyle">@style/Style.FastLyrics.Material2.NavView</item>
    </style>

    <style name="Style.FastLyrics.Material2.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/theme_background_dark</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Style.FastLyrics.Material2.NavView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/theme_background_dark</item>
    </style>

</resources>
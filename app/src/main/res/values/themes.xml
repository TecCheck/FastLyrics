<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Material 1 Theme -->
    <style name="Theme.FastLyrics.Material1.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_dark</item>
        <item name="colorOnPrimary">@color/theme_on_primary</item>

        <item name="colorSecondary">@color/theme_secondary</item>
        <item name="colorSecondaryVariant">@color/theme_secondary_dark</item>
        <item name="colorOnSecondary">@color/theme_on_secondary</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="materialToolbarStyle">@style/Style.FastLyrics.Material1.Toolbar</item>

        <item name="navHeaderBackground">?attr/colorPrimary</item>
        <item name="navHeaderForeground">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.FastLyrics.Material1" parent="Theme.FastLyrics.Material1.Base">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Style.FastLyrics.Material1.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary" />

    <!-- Material 2 Theme -->
    <style name="Theme.FastLyrics.Material2.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_dark</item>
        <item name="colorOnPrimary">@color/theme_on_primary</item>

        <item name="colorSecondary">@color/theme_secondary</item>
        <item name="colorSecondaryVariant">@color/theme_secondary_dark</item>
        <item name="colorOnSecondary">@color/theme_on_secondary</item>

        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="materialToolbarStyle">@style/Style.FastLyrics.Material2.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Style.FastLyrics.Material2.AppBarLayout</item>

        <item name="navHeaderBackground">?attr/colorSurface</item>
        <item name="navHeaderForeground">?attr/colorPrimary</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/baseline_close_24</item>
        <item name="actionBarTheme">@style/Widget.App.ActionBarTheme</item>
    </style>

    <style name="Theme.FastLyrics.Material2" parent="Theme.FastLyrics.Material2.Base">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Style.FastLyrics.Material2.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="elevation">0dp</item>
    </style>

    <style name="Style.FastLyrics.Material2.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="elevation">0dp</item>
    </style>
</resources>